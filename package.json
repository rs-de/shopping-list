{
  "version": "1.7.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "dev": "run-p dev:*",
    "start": "remix-serve build",
    "typecheck": "tsc",
    "prepare": "husky install",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --platform=node --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --platform=node --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "test": "cypress run"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@radix-ui/colors": "^2.0.1",
    "@react-hook/debounce": "^4.0.0",
    "@reduxjs/toolkit": "^1.9.5",
    "@remix-pwa/sw": "^1.1.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/serve": "^1.19.3",
    "@tailwindcss/forms": "^0.5.5",
    "@tailwindcss/typography": "^0.5.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "heroicons-react": "^1.4.1",
    "i18next": "^23.4.4",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-fs-backend": "^2.1.5",
    "i18next-http-backend": "^2.2.1",
    "i18next-resources-to-backend": "^1.1.4",
    "isbot": "^3.6.8",
    "mongoose": "^7.4.4",
    "nanoid": "^4.0.2",
    "notistack": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rate-limiter-flexible": "^2.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-i18next": "^13.1.2",
    "react-redux": "^8.1.2",
    "remix-i18next": "^5.3.0",
    "remix-utils": "^6.6.0",
    "tiny-invariant": "^1.3.1",
    "windy-radix-palette": "^0.6.1",
    "windy-radix-typography": "^0.2.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "cypress": "^12.17.4",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,md,css}": "prettier --write"
  }
}
